package in.sp.main.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import in.sp.main.entity.SaleCourse;

public interface SaleCourseRepository extends JpaRepository<SaleCourse, Integer>
{
	@Query("SELECT date, COUNT(id) FROM SaleCourse GROUP BY date")
	List<Object[]> countByPurchasedDate();
	
	
	@Query("SELECT sc.date, COUNT(sc.id) FROM SaleCourse sc WHERE sc.purchased_date >= :date AND sc.course_name = :coursename GROUP BY sc.date")
	List<Object[]> countByPurchasedDate(@Param("date") String date, @Param("coursename") String coursename);
	
	
}
